<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxWidth="1.7976931348623157E308"
      spacing="0"
      style="-fx-background-color: white; -fx-background-radius: 6; -fx-border-color: #e2e8f0; -fx-border-radius: 6; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 4, 0, 0, 1);"
      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
      AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/17.0.12"
      fx:controller="com.amaurysdelossantos.ServiceTracker.Controllers.Standard.Item.CardItemController">

    <HBox fx:id="headerBox" alignment="CENTER_LEFT" minHeight="48"
          style="-fx-background-color: #0f172a; -fx-background-radius: 6 6 0 0;">
        <HBox fx:id="tailHeaderBox" alignment="CENTER_RIGHT" layoutX="56.0" layoutY="10.0"
              maxWidth="1.7976931348623157E308" spacing="0"
              style="-fx-background-color: #0f172a; -fx-background-radius: 6 6 0 0;" HBox.hgrow="ALWAYS">
            <children>

                <!-- Tail number -->
                <Label fx:id="tailLabel"
                       style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 0 16;"
                       HBox.hgrow="ALWAYS"/>
                <Region maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>

        <!-- Action buttons injected by controller -->
        <HBox fx:id="actionButtonsBox" alignment="CENTER_RIGHT" spacing="0"
              style="-fx-background-color: #0f172a; -fx-background-radius: 6 6 6 6; -fx-border-radius: 6;"/>
    </HBox>

    <HBox fx:id="serviceIconsBox" alignment="CENTER" minHeight="56" style="-fx-background-color: white;"
          HBox.hgrow="ALWAYS"/>
    <HBox spacing="12.0">
        <children>

            <!-- Arrival -->
            <Label fx:id="arrivalLabel" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>

            <!-- Departure -->
            <Label fx:id="departureLabel" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- Description (truncated) -->
            <Label fx:id="descriptionLabel" ellipsisString="â€¦" maxWidth="120"
                   style="-fx-font-size: 11px; -fx-text-fill: #94a3b8;"/>
        </children>
        <padding>
            <Insets left="5.0" right="5.0"/>
        </padding>
    </HBox>

</VBox>
